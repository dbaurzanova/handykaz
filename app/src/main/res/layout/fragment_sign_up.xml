<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".authorization.SignUpFragment"
    android:orientation="vertical"
    android:background="@drawable/auth_background"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back_btn"
            android:background="#00000000"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:text="Тіркелу"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/main_black_text"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="35dp"
        android:padding="15dp"
        android:ems="10"
        android:hint="Алуа"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:background="@drawable/edittext_background"/>

    <EditText
        android:id="@+id/editTextUserEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="15dp"
        android:padding="15dp"
        android:ems="10"
        android:hint="alua02@gmail.com"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:background="@drawable/edittext_background"/>

    <!--
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextUserPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/edittext_background"
            android:inputType="textPassword"
            android:hint="Enter Password"
            app:passwordToggleDrawable="@drawable/auth_eye_disable_mark_draw"/>

    </com.google.android.material.textfield.TextInputLayout>
    -->

    <EditText
        android:id="@+id/editTextUserPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="35dp"
        android:drawableEnd="@drawable/auth_eye_disable_mark_draw"
        android:padding="15dp"
        android:ems="10"
        android:hint="●●●●●●●●●"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:background="@drawable/edittext_background"/>

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/purple_btn_background"
        android:text="Тіркелу"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аккаунтыңыз бар ма?"
            android:textColor="@color/main_gray_text_tranc"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/signInBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#00000000"
            android:text="Кіру"
            android:textSize="16sp"
            android:textColor="@color/main_purple"
            android:textAllCaps="false"
            android:textAlignment="textStart" />


    </LinearLayout>

</LinearLayout>