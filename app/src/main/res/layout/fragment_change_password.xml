<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray_progress"
    tools:context=".ChangePasswordFragment">

    <LinearLayout
        android:id="@+id/textChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_purple_background"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:src="@drawable/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="Құпия сөзді өзгерту"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="italic" />


    </LinearLayout>

    <EditText
        android:id="@+id/editTextUserPasswordOld"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="35dp"
        android:drawableEnd="@drawable/auth_eye_disable_mark_draw"
        android:padding="15dp"
        android:ems="10"
        android:hint="●●●●●●●●●"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textChangePassword"/>

    <EditText
        android:id="@+id/editTextUserPasswordNew"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="35dp"
        android:drawableEnd="@drawable/auth_eye_disable_mark_draw"
        android:padding="15dp"
        android:ems="10"
        android:hint="●●●●●●●●●"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextUserPasswordOld"/>

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/purple_btn_background"
        android:text="Өзгерту"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextUserPasswordNew"/>

</androidx.constraintlayout.widget.ConstraintLayout>