<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authorization.AuthorizationFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/auth_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:src="@drawable/auth_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Ымдау тілін жетік игер"
        android:textSize="18sp"
        android:textColor="@color/main_gray_text_tranc"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:text="Оңай, әрі ойын түрінде қазақгша ымдау тілін тиімді оқы"
        android:textSize="16sp"
        android:textColor="@color/main_gray_text"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/goToSignUpBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/purple_btn_background"
        android:text="Тіркелу"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аккаунтыңыз бар ма?"
            android:textColor="@color/main_gray_text_tranc"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/goToSignInBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#00000000"
            android:text="Кіру"
            android:textSize="16sp"
            android:textColor="@color/main_purple"
            android:textAllCaps="false"
            android:textAlignment="textStart" />


    </LinearLayout>



</LinearLayout>