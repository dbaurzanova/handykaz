<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_gray_progress"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:background="@drawable/content_purple_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Профиль"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/goToSettingsBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00000000"
                android:layout_marginRight="10dp"
                android:src="@drawable/profile_settings_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_photo_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сәлем,"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Алуа"
                        android:textColor="@color/main_yellow"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=", қош келдің!"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Өз дамуыңа күнде \nуақыт бөл"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/content_white_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Деңгей"
            android:textColor="@color/main_black_text"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Прогресс"
            android:textColor="@color/main_purple"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBarCircular"
            android:layout_width="150dp"
            android:layout_height="145dp"
            android:layout_marginVertical="25dp"
            android:indeterminateOnly="false"
            android:progress="55"
            android:progressDrawable="@drawable/progress_bar_circular_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/progressBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55"
            android:textStyle="bold"
            android:textSize="48sp"
            android:textColor="@color/main_black_text"
            app:layout_constraintBottom_toBottomOf="@+id/progressBarCircular"
            app:layout_constraintEnd_toEndOf="@+id/progressBarCircular"
            app:layout_constraintStart_toStartOf="@+id/progressBarCircular"
            app:layout_constraintTop_toTopOf="@+id/progressBarCircular" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        android:background="@drawable/content_white_background">

        <TextView
            android:id="@+id/textLearnedLetters"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Жаттаған \nәріптер"
            android:textColor="@color/main_gray_text_tranc"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textWatchedVideos"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Көрген видео-\nсабақтар"
            android:textColor="@color/main_gray_text_tranc"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/textEarnedScore"
            app:layout_constraintStart_toEndOf="@+id/textLearnedLetters"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textEarnedScore"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Жинаған \nұпай"
            android:textColor="@color/main_gray_text_tranc"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scoreLearnedLetters"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="20"
            android:textColor="@color/main_black_text"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textLearnedLetters" />

        <TextView
            android:id="@+id/scoreWatchedVideos"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="5"
            android:textAlignment="textStart"
            android:textColor="@color/main_black_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/scoreEarnedScore"
            app:layout_constraintStart_toEndOf="@+id/scoreLearnedLetters"
            app:layout_constraintTop_toBottomOf="@+id/textWatchedVideos" />

        <TextView
            android:id="@+id/scoreEarnedScore"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1900"
            android:textAlignment="textStart"
            android:textColor="@color/main_black_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textEarnedScore" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>