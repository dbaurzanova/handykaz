<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="15dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:id="@+id/seekForUnlockedVideo"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/watchStateImageTrue"
            android:layout_width="25dp"
            android:layout_height="27dp"
            android:src="@drawable/video_less_unlocked"
            android:visibility="visible"
            android:scaleType="center" />

        <View
            android:id="@+id/progressLineTrue"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/main_blue"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seekForLockedVideo"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/watchStateImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/video_less_locked"
            android:visibility="visible"
            android:scaleType="center" />

        <View
            android:id="@+id/progressLine"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/main_gray"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/videoThumbNail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:src="@drawable/video_less_1"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />


</LinearLayout>